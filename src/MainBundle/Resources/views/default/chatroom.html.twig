{% extends 'MainBundle:Layout:chatroom-layout.html.twig' %}

{% block body %}

    <div class="chatroom-container">
        <div class="chat-left-nav member-list">
            <div class="nav-header">
                <div class="chatroom-id">
                    Deine Chatr√§ume
                </div>
                <div class="add-chatroom">
                    <i class="material-icons">add</i>
                </div>
            </div>
            <div class="nav-main-conainter">
                <div class="bs-component">
                    <div class="list-group">
                        {% if userChatrooms %}
                            {% for chatroom in userChatrooms %}
                                <div class="list-group-item">
                                    <div class="row-picture">
                                        <i class="material-icons">chat</i>
                                    </div>
                                    <div class="row-content">
                                        <h4 class="list-group-item-heading">Chatraum: {{ chatroom.chatroomId }}</h4>

                                        <p class="list-group-item-text">Donec id elit non mi porta gravida at eget metus</p>
                                    </div>
                                </div>
                                <div class="list-group-separator"></div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="chat-left-nav add-chatgroup-nav">
            <div class="nav-header">
                <div class="add-chatroom">
                    <i class="material-icons">arrow_back</i>
                </div>
                <div class="chatroom-id">
                    Chatraum beitreten
                </div>
            </div>
            <div class="nav-main-conainter">
                <div class="icon-circle">
                    <i class="material-icons">chat</i>
                </div>
                <div class="chatgroup-id-input-container">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Chatraum Id" id="inputID" class="form-control" required="required" >
                        <button type="submit" class="btn btn-default">Chatraum beitreten</button>
                    </div>

                </div>
            </div>
        </div>
        <div class="chatbox">
            <div class="chatbox-header">
                <div class="left-content">
                    Chatraum: {{ roomNumber }}
                </div>
                <div class="online-users">
                    <i class="material-icons">people</i>
                    <p>
                        {{ countUsers }}
                    </p>
                </div>
                <div class="chatroom-controlls">
                    <i class="material-icons">attach_file</i>
                    <i class="material-icons menu-icon">more_vert</i>
                </div>
            </div>
            <div id="chatMessages" class="chatbox-content">

            </div>
            <div class="chatbox-input">
                <div class="input-contaier">
                    <div class="input-placeholder">
                        Schreibe eine Nachricht
                    </div>
                    <div class="input" contenteditable="true" spellcheck="true"></div>
                </div>
                <div class="smile-controll">
                    <i class="material-icons">tag_faces</i>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

